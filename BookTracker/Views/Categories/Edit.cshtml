@model Category
@{
    ViewData["Title"] = "Edit Category";
}
<div class="container shadow p-5">
    <div class="row">
        <h2>Edit Category</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div class="form-row">
             <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="Id" placeholder="Enter category ID" readonly="readonly"/>
                <label asp-for="Id">Category Id</label>               
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="NameToken" placeholder="Enter category name" />
                <label asp-for="NameToken">Category Name</label>
                <span asp-validation-for="NameToken" class="alert-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="Description" placeholder="Enter category description" />
                <label asp-for="Description">Category Description</label>
                <span asp-validation-for="Description" class="alert-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="TypeId" id="TypeId" class="form-control" asp-items="@(new SelectList(ViewBag.CategoryTypes,"Type","Name",Model.TypeId))"></select>
                <label asp-for="TypeId">Select Category Type</label>
                <span asp-validation-for="TypeId" class="alert-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Update</button>
        <a asp-controller="Categories" asp-action="Index" class="btn btn-primary">Back</a>
    </form>
</div>
